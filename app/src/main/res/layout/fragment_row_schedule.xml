<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    tools:context=".row_schedule">
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/subject_id"
            android:layout_width="90dp"
            android:layout_height="wrap_content"
            android:text="ETC10209"
            android:textColor="#000"
            android:textSize="16sp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/subject_name"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:text="Thực hành thiết kế SoC"
            android:layout_marginLeft="5dp"
            android:textColor="#000"
            android:textSize="16sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toEndOf="@+id/subject_id"
            app:layout_constraintTop_toTopOf="@+id/subject_id" />

        <TextView
            android:id="@+id/class_group"
            android:layout_width="90dp"
            android:layout_height="wrap_content"
            android:text="Nhung_TH"
            android:textColor="#000"
            android:textSize="16sp"
            android:layout_marginLeft="5dp"
            app:layout_constraintStart_toEndOf="@+id/subject_name"
            app:layout_constraintTop_toTopOf="@+id/subject_name" />

        <TextView
            android:id="@+id/schedule"
            android:layout_width="90dp"
            android:layout_height="wrap_content"
            android:text="T2(T3-T4)"
            android:textColor="#000"
            android:textSize="16sp"
            android:layout_marginLeft="5dp"
            app:layout_constraintStart_toEndOf="@+id/class_group"
            app:layout_constraintTop_toTopOf="@+id/class_group" />
    </androidx.constraintlayout.widget.ConstraintLayout>

    </FrameLayout>